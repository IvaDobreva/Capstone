<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>log in</title>
    <link rel='stylesheet' href='/stylesheets/main.css'>
    <link rel="stylesheet" type="text/css" href="/stylesheets/login.css">
    <script type="text/javascript">
     function register() {
         location.href="/register";
     }
    </script>
</head>

<body>

  <header>
    <% include templates/header.ejs %>
  </header>

  <div id="login_frame">
      <p><h1>log in</h1></p>
      <form  method="post" action="/login">
          <p>
              <label class="label_log">user</label>
              <input type="text" id="username" name="username" class="text_field" />
          </p>
          <p>
              <label class="label_log">pw</label>
              <input type="text" id="pass" name="pass" class="text_field" />
          </p>
      <div id="login_control">
          <input type="submit" id="btn_login" value="log in">
          <input type="button" id="btn_register" value="register" onclick="register()">
          <a href="forget_pwd" id="forget_pwd" src="/pw_found">forget password?</a>
      </div>
      </form>
  </div>

</body>

</html>
