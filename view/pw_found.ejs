<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>log in</title>
    <link rel="stylesheet" type="text/css" href="/stylesheet/login.css">
    <script type="text/javascript">
        function register() {
            location.href="/register";
        }

        function login() {
            location.href="/";
        }

    </script>
</head>

<body>
<div id="login_frame">
    <p><h1>find your password</h1></p>
    <form method="post" action="/pw_found">
        <p>
            <label class="label_log">user</label>
            <input type="text" id="username" class="text_field" />
        </p>
        <p>
            <label class="label_log">email</label>
            <input type="email" id="email" class="text_field" />
        </p>
        <div id="login_control">
            <input type="submit" id="pw_find" value="find it">
            <input type="button" id="btn_register" value="register" onclick="register()">
            <input type="button" id="btn_login" value="login" onclick="login()">
        </div>
    </form>
</div>
</body>
</html>